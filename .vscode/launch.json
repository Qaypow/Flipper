    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}",
            "vmArgs": "-XstartOnFirstThread"
        },
        {
            "type": "java",
            "name": "DesktopLauncher",
            "request": "launch",
            "mainClass": "com.mygdx.flipper.DesktopLauncher",
            "projectName": "flipper-desktop",
            "vmArgs": "-XstartOnFirstThread"
        },
        {
            "type": "java",
            "name": "IOSLauncher",
            "request": "launch",
            "mainClass": "com.mygdx.flipper.IOSLauncher",
            "projectName": "flipper-ios",
            "vmArgs": "-XstartOnFirstThread"
        }
    ]
}